<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/chat.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom shadow-light ">
            <div class="container">
                <a class="navbar-brand inline-link" asp-area="" asp-controller="Home" asp-action="Index" asp-route-userId="@ViewData["UserId"]">ChatWebApp</a>
                @*<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>*@
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @{
                            if(@ViewData["GroupName"] is not null)
                            { 
                                <li class="nav-item">
                                    <a class="nav-link text-light inline-link" asp-area="" asp-controller="Group" asp-action="Index" asp-route-groupId="@ViewData["GroupId"]" asp-route-userId="@ViewData["UserId"]" asp-route-page="1">@ViewData["GroupName"]</a>
                                </li>
                            }
                            if(@ViewData["ResponcerName"] is not null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light inline-link" asp-area="" asp-controller="Chat" asp-action="Index" asp-route-responcerId="@ViewData["ResponcerId"]" asp-route-userId="@ViewData["UserId"]"  asp-route-page="1">@ViewData["ResponcerName"]</a>
                                </li>
                            }
                        }
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-100 bg-dark">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - ChatWebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
